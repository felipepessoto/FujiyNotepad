<Window x:Class="FujiyNotepad.UI.FindTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FujiyNotepad.UI"
        mc:Ignorable="d"
        Title="Find" Height="160" Width="230" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Find what:" VerticalAlignment="Top" Margin="10,0,0,0"/>
        <TextBox Name="TxtTextToFind" HorizontalAlignment="Left" Height="23" Text="" VerticalAlignment="Top" Width="200" Margin="10,21,0,0"/>
        <Button Name="BtnFind" Content="Find Next" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,59,0,0"  IsDefault="True" Click="BtnFind_Click" />
        <Button Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="117,59,0,0" Click="BtnCancel_Click" />
        <ProgressBar Name="PgbProgress" Visibility="Hidden" HorizontalAlignment="Left" Height="10" Margin="10,90,0,0" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>
