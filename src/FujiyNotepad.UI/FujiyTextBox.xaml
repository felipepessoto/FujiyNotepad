<UserControl x:Class="FujiyNotepad.UI.FujiyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FujiyNotepad.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox Name="TxtContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto" IsUndoEnabled="False" VerticalScrollBarVisibility="Disabled" PreviewKeyDown="TxtContent_PreviewKeyDown" />
        <ScrollBar Name="ContentScrollBar" HorizontalAlignment="Right" VerticalAlignment="Stretch" Maximum="1000" Scroll="ScrollBar_Scroll" />
    </Grid>
</UserControl>
